{
  "manifest_version": 3,
  "name": "CodeForge Toolkit",
  "version": "1.0.0",
  "description": "开发者多功能工具集，包含身份证生成、时间戳转换、字符串编码、加密解密和WebSocket测试等功能",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "CodeForge Toolkit"
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
