{
  "manifest_version": 3,
  "name": "CodeForge",
  "version": "1.0.0",
  "description": "开发者工具箱 - 一站式开发辅助工具集合",
  "icons": {
    "16": "logo.svg",
    "48": "logo.svg",
    "128": "logo.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodeForge"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
